{
  "name": "habits-backend",
  "version": "0.0.1",
  "description": "Keystone JS backend for building habits",
  "main": "index.js",
  "author": "ztratify",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/ztratify/building-habits",
  "scripts": {
    "dev": "keystone-next",
    "build": "keystone-next build",
    "start": "keystone-next start -p $PORT",
    "seed-data": "keystone-next --seed-data",
    "publishToHeroku": "cd ../ && git subtree push --prefix backend heroku-backend main || true",
    "// what? //": "at root of local git, push 'backend' (dir) to 'heroku-backend' (remote git) on 'master' (branch)"
  },
  "engines": {
    "node": "16.x"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 10,
            "browsers": [
              "last 2 chrome versions",
              "last 2 firefox versions",
              "last 2 safari versions",
              "last 2 edge versions"
            ]
          }
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "dependencies": {
    "@keystone-next/admin-ui": "^12.0.0",
    "@keystone-next/auth": "^19.0.0",
    "@keystone-next/fields": "^5.4.0",
    "@keystone-next/keystone": "14.0.1",
    "@keystone-next/types": "^15.0.0",
    "@keystonejs/server-side-graphql-client": "^2.1.2",
    "@types/nodemailer": "^6.4.0",
    "dotenv": "^8.2.0",
    "next": "^10.0.5",
    "nodemailer": "^6.4.17",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  }
}
